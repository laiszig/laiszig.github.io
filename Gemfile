source 'https://rubygems.org'

# Jekyll core - latest version compatible with Ruby 4.0
gem 'jekyll', '~> 4.4'

group :jekyll_plugins do
  gem 'jekyll-feed', '~> 0.17'
  gem 'jekyll-gist', '~> 1.5'
  gem 'jekyll-seo-tag', '~> 2.8'
  gem 'jemoji', '~> 0.13'
end

# Required for Ruby 4.0+ compatibility (removed from standard library)
gem 'csv'
gem 'bigdecimal'
gem 'base64'

# Web server for local development
gem 'webrick'